{
  "name": "evm-contracts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "abis": "rm -rf artifacts && npx hardhat compile && jq .abi artifacts/contracts/Bridge.sol/Bridge.json > artifacts/contracts/Bridge.sol/Bridge.json.tmp && mv artifacts/contracts/Bridge.sol/Bridge.json.tmp artifacts/contracts/Bridge.sol/Bridge.json",
    "coverage": "npx truffle run coverage",
    "lint-check": "npm run lint-check-sol && npm run lint-check-js && npm run lint-check-json",
    "lint-check-js": "prettier --check \"./**/*.js\"",
    "lint-check-json": "prettier --check \"./[a-zA-Z0-9.]+(?!-lock).json\"",
    "lint-check-sol": "prettier --check \"contracts/**/*.sol\"",
    "lint-fix": "npm run lint-fix-sol && npm run lint-fix-js && npm run lint-fix-json",
    "lint-fix-js": "prettier --write \"./**/*.js\"",
    "lint-fix-json": "prettier --write \"./[a-zA-Z0-9.]+(?!-lock).json\"",
    "lint-fix-sol": "prettier --write \"contracts/**/*.sol\"",
    "deploy": "npx hardhat run --network geth scripts/deploy.js",
    "deploylocal": "npx hardhat run --network localhost scripts/deploy.js",
    "deploydev": "npx hardhat run scripts/deploy.js",
    "test": "npx hardhat test",
    "size": "npx hardhat size-contracts",
    "docgen": "npx hardhat docgen",
    "watch-test": "npx hardhat compile && npx hardhat watch retest",
    "watch-deploy": "npx hardhat watch deploy",
    "run-node": "npx hardhat node",
    "clean": "npx hardhat clean && git clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.2",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@openzeppelin/truffle-upgrades": "^1.15.0",
    "@truffle/hdwallet-provider": "^2.0.8",
    "@uniswap/v3-sdk": "^3.8.3",
    "@sushiswap/core": "^1.0.0",
    "chai": "^4.3.6",
    "chai-bignumber": "^3.0.0",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.4",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.4",
    "hardhat-watcher": "^2.3.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.17",
    "web3": "^1.7.3"
  }
}
